import string
import random



def rand():
    while True:
        lenght = int(input("\n How many do you want you're password to be? "))
        Upper = string.ascii_uppercase
        Lower = string.ascii_lowercase
        Punctions = string.punctuation
        num = string.digits
        all = Upper + Lower + Punctions + num
        Randrange = random.sample(all, lenght)
        pwwd ="".join(Randrange)
        with open('password.txt', 'a') as f:
            f.write(pwwd + "\n")
            break
        
            
                

def view():
    with open('password.txt', 'r') as f:
        for line in f.readlines():
            print(line.rstrip())
      

def add():
    name = input("Account name: ")
    pwd = input("Password: ")

    with open('password.txt', 'a') as f:
        f.write(name + "|" + pwd + "\n")

while True:
    mode = input("would you like to add a password or veiw (view, add, exit, random pwd)? ")
    if mode =="exit":
        break
    if mode =="view":
        view()
    elif mode =="add":
        add()
    elif mode == "random pwd":
        rand()
    else:
        print('Invalid mode')
